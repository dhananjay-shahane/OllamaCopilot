{
  "name": "replit-copilot-extension",
  "displayName": "Ollama Chat Extension",
  "description": "Fast Ollama Chat extension with MCP integration and VS Code workspace tools",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "replit-copilot.openChat",
        "title": "Open Ollama Chat",
        "category": "Ollama"
      },
      {
        "command": "replit-copilot.configure",
        "title": "Configure MCP & LLM Settings",
        "category": "Ollama"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "replit-copilot",
          "title": "Ollama Chat",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "replit-copilot": [
        {
          "id": "replitCopilotChat",
          "name": "Chat",
          "when": "true",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "Ollama Chat",
      "properties": {
        "replitCopilot.mcpServerUrl": {
          "type": "string",
          "default": "",
          "description": "MCP Server URL endpoint"
        },
        "replitCopilot.ollamaUrl": {
          "type": "string",
          "default": "https://ea22b928195e.ngrok-free.app",
          "description": "Ollama server URL"
        },
        "replitCopilot.defaultModel": {
          "type": "string",
          "default": "llama3.2:1b",
          "description": "Default Ollama model to use"
        },
        "replitCopilot.mcpApiKey": {
          "type": "string",
          "default": "",
          "description": "MCP Server API Key (optional)"
        },
        "replitCopilot.mcpServerStdio": {
          "type": "object",
          "default": {
            "command": "node",
            "args": ["-e", "console.log('MCP Ready'); process.stdin.pipe(process.stdout);"],
            "timeout": 2000
          },
          "description": "MCP Server STDIO configuration"
        },
        "replitCopilot.mcpConnectionType": {
          "type": "string",
          "enum": ["stdio", "http", "websocket"],
          "default": "stdio",
          "description": "MCP connection type (stdio is fastest)"
        },
        "replitCopilot.enableStreaming": {
          "type": "boolean",
          "default": true,
          "description": "Enable ChatGPT-style streaming responses"
        },
        "replitCopilot.enableFastMode": {
          "type": "boolean", 
          "default": true,
          "description": "Enable fast mode with reduced timeouts"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npx tsc -p ./",
    "watch": "npx tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@types/ws": "^8.5.0",
    "axios": "^1.6.0",
    "ws": "^8.14.0"
  }
}
